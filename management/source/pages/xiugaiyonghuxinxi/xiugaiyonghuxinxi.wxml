<view class='margin-top'></view>
<view class="xg-size margin-right-40 margin-left-40 txt-white f-32 padding-left-40 padding-top-40 padding-bottom-40 bj-shadow">
商户信息卡</view>
<view class='flex-row bg-white margin-left-40 margin-right-40 border bj-shadow' >
<view class='t-color padding-top-40 f-32 padding-left-40 padding-bottom-40'>客户名称：</view>
 <input class="h5 padding-top-40 padding-left-40 padding-bottom-40" placeholder="请输入" bindinput="name" value="{{OwnerInfo.name}}" placeholder-style="color:#CCCCCC">
 </input>
</view>
<view class='flex-row bg-white margin-left-40 margin-right-40 border bj-shadow' >
<view class='t-color padding-top-40 f-32 padding-left-40 padding-bottom-40'>商户名称：</view>
<input class="h5 padding-top-40 padding-left-40 padding-bottom-40" placeholder="请输入" bindinput="shopname" value="{{OwnerInfo.shopname}}" placeholder-style="color:#CCCCCC">
 </input>
</view>
<view class='flex-row bg-white margin-left-40 margin-right-40 border-radius-10 bj-shadow' >
<view class='t-color padding-top-40 f-32 padding-left-40 padding-bottom-40'>商户地址：</view>
<input class="h5 padding-top-40 padding-left-40 padding-bottom-40" placeholder="请输入" bindinput="shopaddress" value="{{OwnerInfo.shopaddress}}" placeholder-style="color:#CCCCCC">
 </input>
</view>
<view class="fixbottom">
<image bindtap="back" data-name="backone" src='{{uploadpath}}resource/{{res.a3}}' class="margin-right-40 margin-left-40 margin-bottom-80 icon-96"></image>
</view>
